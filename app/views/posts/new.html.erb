<div class="container mt-4 mb-4">
  <h1>画像投稿フォーム</h1>
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-4">
     <%= form_with model: @post do |f| %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>生き物の名前</h4>
        <%= f.text_field :creature_name %>
        <h4>説明</h4>
        <%= f.text_area :caption %>
        <h4>場所</h4>
        <%= f.text_field :address, id:"address" %>
        <h4>緯度</h4>
        <%= f.number_field :latitude, id:"ido", step: "0.00000000000000001" %>
        <h4>経度</h4>
        <%= f.number_field :longitude, id:'keido', step: "0.00000000000000001" %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
    <div class="col-md-8">
      場所を検索
      <input type="text" id="keyword"><button id="search">検索</button>
      <div id="target"></div>
      <div id="map"></div>      
    </div>
 
  </div>
</div>


<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>