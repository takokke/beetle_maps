<div class="container mt-4 mb-4">
  <div class="row no-gutters">
    <div class="col-sm-10 col-md-6 mx-2 mx-sm-auto text-center shadow-lg rounded py-4 px-3">
      <h5>ログイン</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-group">

        <!--名前入力欄-->
        <div class="input-group mt-4 mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user"></i></span>
          </div>
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", autocomplete: "name", class:"form-control" %>
        </div>

        <!--パスワード入力欄-->
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
          </div>
          <%= f.password_field :password, placeholder: "パスワード", id: "inputPassword",autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <!--ログインボタン-->
        <div class="actions">
          <%= f.submit "ログイン", class:'btn'%>
        </div>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

